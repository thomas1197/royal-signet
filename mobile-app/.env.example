# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google OAuth Configuration
# Get these from Google Cloud Console > Credentials
GOOGLE_EXPO_CLIENT_ID=your_expo_client_id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com

# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
# Use test keys (pk_test_...) for development
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Firebase App Check Configuration
# Get reCAPTCHA v3 site key from https://www.google.com/recaptcha/admin
# For development, debug mode is used (this can be a placeholder)
# For production, MUST set a real reCAPTCHA v3 site key
EXPO_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_v3_site_key_here

# App Configuration
APP_ENV=development
